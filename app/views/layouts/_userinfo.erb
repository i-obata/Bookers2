<div class="col-3">
    <!--ユーザー情報-->
    <h2>User info</h2>
    <%= image_tag user.get_profile_image(100,100) %>
    <table class="table">
        <tbody>
            <tr>
                <td><strong>name</strong></td>
                <td><strong><%= user.name %></strong></td>
                <tr>
            <tr>
                <td><strong>introduction</strong></td>
                <td><strong><%= user.introduction %></strong></td>
            <tr>
        </tbody>
    </table>
    <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block", method: :get do %>
        <i class="fa-solid fa-user-gear"></i>
    <% end %>

    <!--投稿機能-->
    <h2>New book</h2>
    <%= form_with model: book do |f| %>
      <div class="form-group">
        <%= f.label :Title %><br />
        <%= f.text_field :title, class: "form-control", style: "width:100%" %>
      </div>
    
      <div class="form-group">
        <%= f.label :Opinion %><br />
        <%= f.text_area :body, class: "form-control", style: "width:100%" %>
      </div>
      
      <%= f.submit 'Create Book', class:"btn btn-success" %>
    <% end %>
</div>

