<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <script src="https://kit.fontawesome.com/fb873a8e10.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand p-2" href= "/">Bookers</a>
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="nav-item">
                   <i class="fa-solid fa-house-chimney-user nav-link text-light"><%= link_to 'Home', user_path(current_user.id), class: 'nav-link text-dark' %></i>
                </li>
                <li class="nav-item">
                  <a class=nav-link text-light href="/users"><i class="fa-solid fa-users"></i>Users</a>          
                </li>
                <li class="nav-item">
                  <a class=nav-link text-light href="/books"><i class="fa-solid fa-book-open"></i>Books</a>          
                </li>
                <li class="nav-item">
                  <!--<a class=nav-link text-light href="/users/sign_out"><i class="fa-solid fa-right-from-bracket"></i>Log out</a>          -->
                   <i class="fa-solid fa-right-from-bracket nav-link text-light"><%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %></i>
                </li>
              <% else %>
                <li class="nav-item">
                  <a class=nav-link text-light href="/"><i class="fa-solid fa-house-chimney"></i>Home</a>
                </li>
                <li class="nav-item">
                  <a class=nav-link text-light href="/homes/about"><i class="fa-solid fa-link"></i>About</a>
                </li>
                <li class="nav-item">
                  <a class=nav-link text-light href="/users/sign_up"><i class="fa-solid fa-user-plus"></i>Sign up</a>
                </li>
                <li class="nav-item">
                  <a class=nav-link text-light href="/users/sign_in"><i class="fa-solid fa-right-to-bracket"></i>Log up</a>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <% if user_signed_in? %>
        <% if current_page?(current_user) %>
          <div><%= flash[:notice] %></div>
          <div class="container">
            <div class="row">
              
              <!--サイドバー-->
              <div class="col-3">
  
                <!--ユーザー情報-->
                <h2>User info</h2>
                <!--ユーザーの画像を表示-->
                <table class="table">
                  <tbody>
                    <tr>
                      <td><strong>name</strong></td>
                      <td><strong><%= current_user.name %></strong></td>
                      <tr>
                    <tr>
                      <td><strong>introduction</strong></td>
                      <td><strong><%= current_user.introduction %></strong></td>
                    <tr>
                  </tbody>
                </table>
                <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block", method: :get do %>
                    <i class="fa-solid fa-user-gear"></i>
                <% end %>
                
                <!--投稿機能-->
                <h2>New book</h2>
                <%= form_with model: @book do |f| %>
                  <p>Title</p>
                  <div class="form-label">
                    <%= f.text_field :title, class: "form-control", style: "width:100%" %>
                  </div>
              
                  <p>Opinion</p>
                  <div class="form-label">
                    <%= f.text_area :body, class: "form-control", style: "width:100%" %>
                  </div>
                  
                  <%= f.submit 'Create Book', class:"btn btn-success" %>
                <% end %>
              </div>
              
              <!--ブログ-->
              <div class="col-8 offset-1">
                <%= yield %>
              </div>
            </div>
          </div>
        <% else %>
          <%= yield %>
        <% end %>
      <% else %>
        <%= yield %>
      <% end %>
    </main>
  </body>
</html>
