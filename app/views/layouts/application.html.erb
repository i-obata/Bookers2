<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <script src="https://kit.fontawesome.com/fb873a8e10.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <ul>
        <% if user_signed_in? %>
          <li>
            <i class="fa-solid fa-house-chimney-user"></i><%= link_to "Home", user_registration_path %>
          </li>
          <li>
            <i class="fa-solid fa-users"></i><%= link_to "Users", user_path(current_user.id) %>          
          </li>
          <li>
            <i class="fa-solid fa-book-open"></i><%= link_to "Books", books_path %>          
          </li>
          <li>
            <i class="fa-solid fa-right-from-bracket"></i><%= link_to "Log out", destroy_user_session_path, method: :delete %>          
          </li>
        <% else %>
          <li>
            <i class="fa-solid fa-house-chimney"></i><%= link_to "Home", root_path %>
          </li>
          <li>
            <i class="fa-solid fa-link"></i><%= link_to "About", homes_about_path %>
          </li>
          <li>
            <i class="fa-solid fa-user-plus"></i><%= link_to "Sign up", new_user_registration_path %>
          </li>
          <li>
            <i class="fa-solid fa-right-to-bracket"></i><%= link_to "Log up", new_user_session_path %>
          </li>
        <% end %>
      </ul>
    </header>
  </body>
</html>
