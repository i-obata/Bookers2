<%= render 'layouts/errormesseag', {target: @user} %>

<div class="container">
    <div class="d-flex flex-column bd-highlight mb-3">
        <div class="mx-auto col-md-8">
            <h2 class="p-2 bd-highlight">User info</h2>
            <%= form_with model: @user do |f| %>
                <div class="form-group">
                    <%= f.label :name %><br />
                    <%= f.text_field :name, class: "form-control", style: "width:100%" %>
                </div>
                 
                 <!--ユーザーのimage画像-->
                <div class="form-group">
                    <%= f.label :Image %><br />
                    <%= f.file_field :profile_image, accept: "image/*" %>
                </div>
                
                <div class="form-group">
                    <%= f.label :introduction %><br />
                    <%= f.text_area :introduction, class: "form-control", style: "width:100%" %>
                </div>
                
                <div class="actions">
                    <%= f.submit "Update User", class: "btn btn-secondary" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
