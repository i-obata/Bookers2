<div class="container">
    <div class="row">
        <%= render 'layouts/userinfo', {user: @user, book: @book} %>
        <div class="col-8 offset-1">
            <h2>Books</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col" colspan = "1"></th>
                        <th scope="col"><strong>Title</strong></th>
                        <th scope="col"><strong>Opinion</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <% @books.each do |book| %>
                        <tr>
                            <td><%= image_tag @user.get_profile_image(100,100) %></td>
                            <td><%= link_to book.title, book_path(book.id) %></td>
                            <td><%= book.body %></td>
                        <tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
