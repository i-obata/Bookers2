<%= render 'layouts/errormesseag', {target: @book} %>

<div class="container">
    <div class="d-flex flex-column bd-highlight mb-3">
        <div class="mx-auto col-md-8">
            <h2 class="p-2 bd-highlight">Editing Book</h2>
            <%= form_with model: @book do |f| %>
                <div class="form-group">
                    <%= f.label :title %><br />
                    <%= f.text_field :title, class: "form-control", style: "width:100%" %>
                </div>

                <div class="form-group">
                    <%= f.label :Opinion %><br />
                    <%= f.text_field :body, class: "form-control", style: "width:100%" %>
                </div>
                
                <div class="actions">
                    <%= f.submit "Update Book", class: "btn btn-secondary" %>
                </div>
                <p><%= link_to "Show",book_path(@book.id) %>ï½œ<%= link_to "Back",books_path %></p>
            <% end %>
        </div>
    </div>
</div>
